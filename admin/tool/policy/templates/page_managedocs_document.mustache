{{!
    Template for the policy document versions management page.

    Classes required for JS:
    -

    Data attributes required for JS:
    -

    Context variables required for this template:
    * name
    * description
    * versions
}}
<h2>{{name}}</h2>
{{#canmanage}}
<div>
    <a role="button" href="#" class="btn btn-primary">{{#str}} newversion, tool_policy {{/str}}</a>
    <a role="button" href="#" class="btn btn-secondary">{{#str}} settings {{/str}}</a>
</div>
{{/canmanage}}
<p style="clear:both"></p>
<table class="generaltable fullwidth listpolicyversions">
    <thead>
        <tr>
            <th scope="col">{{#str}} policydocrevision, tool_policy {{/str}}</th>
            <th scope="col">{{#str}} status {{/str}}</th>
            <th scope="col">{{#str}} modified {{/str}}</th>
            {{#canviewacceptances}}
            <th scope="col">{{#str}} usersaccepted, tool_policy {{/str}}</th>
            {{/canviewacceptances}}
            {{#canmanage}}
            <th scope="col"></th>
            {{/canmanage}}
        </tr>
    </thead>
    <tbody>
        {{#versions}}
        <tr>
            <td>
                <a href="view.php?id={{id}}">{{revision}}</a>
            </td>
            <td>
                {{status}}
            </td>
            <td>
                {{#userdate}} {{timemodified}}, {{#str}} strftimedate {{/str}} {{/userdate}}
            </td>
            {{#canviewacceptances}}
            <td>
                <a href="{{pluginbaseurl}}/acceptances.php?versionid={{id}}">{{usersaccepted}}</a>
            </td>
            {{/canviewacceptances}}
            {{#canmanage}}
            <td>
				<div class="btn-group">
					<button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						{{#str}} action {{/str}}
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu">
						<li><a class="dropdown-item" href="{{pluginbaseurl}}/editpolicydoc.php?template=site">{{#str}} edit {{/str}}</a></li>
						<li><a class="dropdown-item" href="{{pluginbaseurl}}/editpolicydoc.php?template=site">{{#str}} makecurrent, tool_policy {{/str}}</a></li>
					</ul>
				</div>

            </td>
            {{/canmanage}}
        </tr>
        {{/versions}}
    </tbody>
</table>
