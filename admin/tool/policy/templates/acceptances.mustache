{{!
    Template for the user acceptances page.

    Classes required for JS:
    -

    Data attributes required for JS:
    -

    Context variables required for this template:
    * policies
}}
<table class="generaltable fullwidth">
    <thead>
    <th>Policy name</th>
    <th>Version</th>
    <th>Agreed</th>
    <th>Agreed on</th>
    <th>Agreed by</th>
    <th>Remark</th>
    </thead>
    <tbody>
        {{#policies}}
            {{#versions}}
                <tr>
                    {{#isfirst}}
                    <td rowspan="{{versioncount}}">{{{name}}}</td>
                    {{/isfirst}}
                    <td>
                        <a href="{{viewurl}}">{{{revision}}}</a>
                        {{#iscurrent}}{{#pix}} t/check, core {{/pix}}{{/iscurrent}}
                    </td>
                    <td>
                        {{#acceptlink}}
                            <a href="{{acceptlink}}">{{accepted}}</a>
                        {{/acceptlink}}
                        {{^acceptlink}}
                            {{accepted}}
                        {{/acceptlink}}
                    </td>
                    <td>{{timeaccepted}}</td>
                    <td>{{{acceptedby}}}</td>
                    <td>{{{note}}}</td>
                </tr>
            {{/versions}}
        {{/policies}}
    </tbody>
</table>