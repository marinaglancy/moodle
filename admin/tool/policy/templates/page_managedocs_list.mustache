{{!
    Template for the policy documents management page.

    Classes required for JS:
    -

    Data attributes required for JS:
    -

    Context variables required for this template:
    * haspolicies
    * policies
}}
<h2>{{#str}} policydocs, tool_policy {{/str}}</h2>
{{#canmanage}}
<div>
	<div class="btn-group">
		<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{#str}} newpolicy, tool_policy {{/str}}
            <span class="caret"></span>
		</button>
		<ul class="dropdown-menu">
            <li><a class="dropdown-item" href="{{pluginbaseurl}}/editpolicydoc.php?template=site">{{#str}} newpolicysite, tool_policy {{/str}}</a></li>
            <li><a class="dropdown-item" href="{{pluginbaseurl}}/editpolicydoc.php?template=privacy">{{#str}} newpolicyprivacy, tool_policy {{/str}}</a></li>
            <li><a class="dropdown-item" href="{{pluginbaseurl}}/editpolicydoc.php?template=thirdparties">{{#str}} newpolicythirdparties, tool_policy {{/str}}</a></li>
            <li class="dropdown-divider divider"></li>
            <li><a class="dropdown-item" href="{{pluginbaseurl}}/editpolicydoc.php">{{#str}} newpolicyother, tool_policy {{/str}}</a></li>
		</ul>
	</div>
</div>
{{/canmanage}}
<p style="clear:both"></p>
{{#haspolicies}}
<table class="generaltable fullwidth listpolicydocuments">
    <thead>
        <tr>
            <th scope="col">{{#str}} policydocname, tool_policy {{/str}}</th>
            {{#canviewacceptances}}
            <th scope="col">{{#str}} usersaccepted, tool_policy {{/str}}</th>
            {{/canviewacceptances}}
            <th scope="col">{{#str}} policydocdesc, tool_policy {{/str}}</th>
            {{#canmanage}}
            <th scope="col"></th>
            {{/canmanage}}
        </tr>
    </thead>
    <tbody>
        {{#policies}}
        <tr>
            <td>
                <a href="?id={{id}}">{{name}}</a>
            </td>
            {{#canviewacceptances}}
            <td>
                <a href="{{pluginbaseurl}}/acceptances.php?policyid={{id}}">{{usersaccepted}}</a>
            </td>
            {{/canviewacceptances}}
            <td>
                <small>{{description}}</small>
            </td>
            {{#canmanage}}
            <td>
                {{#pix}} t/up, core {{/pix}}
                {{#pix}} t/down, core {{/pix}}
            </td>
            {{/canmanage}}
        </tr>
        {{/policies}}
    </tbody>
</table>
{{/haspolicies}}
