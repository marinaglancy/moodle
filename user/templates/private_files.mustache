{{!
    @template core_user/private_files

    Template for private files.

    Example context (json):
    {
        "formclass": "core_user\\\\form\\\\private_files"
    }
}}
<div id="userfilesform"></div>
{{#js}}
require(['core_form/ajaxform'], function(AjaxForm) {
    form = new AjaxForm(document.getElementById('userfilesform'), '{{formclass}}', {});
    form.load();
    form.onSubmitSuccess = function(response) {
        form.load(); // To remove validation errors, if any.
        M.core_formchangechecker.set_form_submitted();
    }
});
{{/js}}
